<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.workshop.cotic.feedback.Avaliacao">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avaliação"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Large"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="13dp" />

    <RadioGroup
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:id="@+id/avaliacao_radioGroup">

        <RadioButton
            android:id="@+id/radioButton_gostei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Gostei" />

        <RadioButton
            android:id="@+id/radioButton_razoavel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Razoável" />

        <RadioButton
            android:id="@+id/radioButton_ruim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ruim" />
    </RadioGroup>

    <EditText
        android:id="@+id/avaliacao_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/avaliacao_radioGroup"
        android:layout_centerVertical="true"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:hint="Sugestões ou Críticas"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/avaliacao_button_enviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/avaliacao_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="Enviar" />

</RelativeLayout>
